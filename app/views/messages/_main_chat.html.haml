.chat-main
    .main-header
        .main-header__left
            .main-header__left__group
                group name
            .main-header__left__list
                Member : 
        .main-header__edit-btn 
            Edit
    .messages
        .message
            .message__upper-info
                .message__upper-info__talker
                    shouya
                .message__upper-info__date 
                    2019/11/23(Sat) 21:39:34
            .message__text 
                this is a first message
    .form
        = form_for [@group, @message] do |f|
            .form__input-box 
                = f.text_field :content, class: 'form__text', placeholder: 'type a message'
                .form__mask
                = f.label :image, class: 'form__image' do
                    = icon('fas', 'image')
                    = f.file_field :image, class: 'form__file'
                = f.submit 'Send', class: 'form__submit-btn'
